<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditTextPreference
        android:defaultValue="true"
        android:key="user_display_name"
        app:defaultValue="@string/pref_default_display_name"
        app:title="@string/pref_title_display_name"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        android:layout_width="match_parent"
        android:key="user_email_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_email_address"
        app:defaultValue="true"
        app:useSimpleSummaryProvider="true"/>

    <ListPreference
        android:key="user_favorite_social"
        app:defaultValue="@array/pref_default_favorite_social"
        app:entries="@array/pref_entries_favorite_social"
        app:entryValues="@array/pref_value_favorite_social"
        app:key="reply"
        app:title="@string/pref_title_favoite_social"
        app:useSimpleSummaryProvider="true" />
</PreferenceScreen>
